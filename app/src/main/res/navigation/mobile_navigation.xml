        android:id="@+id/nav_my_suscribers"
        android:name="com.example.healthsense.ui.suscriptions.SuscribersFragment"
        android:label="@string/menu_my_Suscribers"
        tools:layout="@layout/fragment_suscribers" />

    <fragment
        android:id="@+id/nav_device"
        android:name="com.example.healthsense.ui.device.DeviceFragment"
        android:label="@string/menu_device"
        tools:layout="@layout/fragment_device" />

    <fragment
        android:id="@+id/nav_payment_methods"
        android:name="com.example.healthsense.ui.payment.PaymentFragment"
        android:label="@string/menu_payment_methods"
        tools:layout="@layout/fragment_payment" />

    <fragment
        android:id="@+id/nav_change_pass"
        android:name="com.example.healthsense.ui.password.ChangePass"
        android:label="@string/menu_change_pasword"
        tools:layout="@layout/fragment_change_pass"/>

    <fragment
        android:id="@+id/nav_close_session"
        android:name="com.example.healthsense.ui.logout.Logout"
        android:label="@string/close_session"/>

