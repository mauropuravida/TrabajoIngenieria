<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_profile">

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.healthsense.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_my_trainings"
        android:name="com.example.healthsense.ui.mytrainings.MyTrainingsFragment"
        android:label="@string/menu_my_trainings" />

    <fragment
        android:id="@+id/nav_training_history"
        android:name="com.example.healthsense.ui.traininghistory.TrainingHistoryFragment"
        android:label="@string/menu_training_history"
